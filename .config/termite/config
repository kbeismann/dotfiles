# Misc.
allow_bold    = true
dynamic_title = true
clickable_url = true
browser       = firefox

# Cursor and mouse.
mouse_autohide = true           # Don't show the mouse pointer when typing.
cursor_blink   = system         # "system", "on" or "off".
cursor_shape   = block          # "block", "underline" or "ibeam".

# Bell.
urgent_on_bell = false
audible_bell   = false

# Hinting, size hints for the window, and antialias.
size_hints = true
hinting    = true
antialias  = true

# Hide links that are no longer valid in url select overlay mode.
filter_unmatched_urls = true

# Scrolling.
scroll_on_output    = false
scroll_on_keystroke = true
scrollback_lines    = 100000


